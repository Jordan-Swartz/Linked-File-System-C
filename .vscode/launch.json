{
    "version": "0.2.0",
    "configurations": [

      {
        "name": "Launch LinkedFS",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/LinkedFS",  // Path to your CMake executable
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build",  // Automatically build the project
        "miDebuggerPath": "/usr/bin/gdb",
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }
  